<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App"
        tools:targetApi="31">

        <!-- 앱 로그인 -->
        <activity
                android:name=".Register_Login.Login"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 대리점 메인 화면 -->
        <activity
            android:name=".Branch.BranchMainActivity"
            android:exported="false"/>

        <!-- 대리점 주문 화면 -->
        <activity android:name=".Branch.BranchOrderResiActivity"
            android:exported="false"/>

        <!-- 대리점 주문 - 상품 추가 화면 -->
        <activity android:name=".Branch.ProjectSelectActivity"
            android:exported="false"/>

        <!--  대리점 - 주문내역 화면  -->
        <activity
            android:name=".Branch.OrderHistoryActivity"
            android:exported="false"/>

        <!--  대리점 - 주문 상세 내역  -->
        <activity
            android:name=".Branch.OrderItemListActivity"
            android:exported="false"/>

        <!--  물류센터 메인 화면  -->
        <activity
            android:name=".Warehouse.WHMainActivity"
            android:exported="false"/>

        <!-- 물류센터 상세 주문 목록 화면 -->
        <activity
            android:name=".Warehouse.OrderDetailActivity"
            android:exported="false"/>

        <!-- 물류센터 재고 화면 -->
        <activity
            android:name=".Warehouse.WHOrderHistory"
            android:exported="false"/>

    </application>

</manifest>