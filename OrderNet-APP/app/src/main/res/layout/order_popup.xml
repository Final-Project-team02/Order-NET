<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="280dp"
    android:background="@drawable/branch_order_popup_"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginTop="20dp">


    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:text="주문 신청하시겠습니까?"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CFCFCF"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.widget.Button
            android:id="@+id/order_submit_btn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="예"
            android:textColor="@color/blue"
            android:background="@drawable/branch_order_popup_yes"
            android:textSize="18dp"
            android:textStyle="bold" />


        <!-- 수직 구분선 -->
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#CFCFCF" />


        <android.widget.Button
            android:id="@+id/order_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="아니요"
            android:textColor="#FF0000"
            android:textSize="18dp"
            android:background="@drawable/branch_order_popup_no"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
