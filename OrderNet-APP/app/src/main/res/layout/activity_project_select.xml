<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical"
  android:fitsSystemWindows="true">

  <!-- Header 툴바 -->
  <include layout="@layout/header" />

  <!-- 상단 '상품 선택' 텍스트 -->
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:text="상품 선택"
    android:textSize="20sp"
    android:textStyle="bold" />

  <!--    선 -->
  <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_marginBottom="10dp"
    android:background="#38000000" />

  <!-- 검색창 -->
  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="8dp">

    <!-- Spinner -->
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_category"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/project_select_spinner"
        android:minWidth="80dp"
        android:spinnerMode="dropdown"
        android:paddingHorizontal="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- FrameLayout: EditText + ImageButton 겹치기 -->
    <FrameLayout
      android:id="@+id/search_container"
      android:layout_width="0dp"
      android:layout_height="40dp"
        android:layout_marginLeft="6dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@id/spinner_category"
      app:layout_constraintEnd_toEndOf="parent">

      <!-- EditText -->
      <EditText
          android:id="@+id/edit_search"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/search_edittext_bg"
          android:hint="상품명을 입력하세요"
          android:paddingStart="12dp"
          android:paddingEnd="40dp"
          android:textColor="@color/black"
          android:textSize="14sp" />

      <!-- ImageButton (오른쪽에 겹치기) -->
      <ImageButton
        android:id="@+id/btn_search"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end|center_vertical"
        android:background="@drawable/search_button_bg"
        android:src="@drawable/search1"
        android:scaleType="centerInside"
        android:contentDescription="검색" />
    </FrameLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_marginTop="5dp"
    android:background="#38000000" />

  <!-- '상품정보' 제목 -->
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:text="상품정보"
    android:textColor="@color/blue2"
    android:textSize="18sp"
    android:textStyle="bold" />

  <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_marginBottom="20dp"
    android:background="#5574A4" />

  <!-- 상품 리스트 RecyclerView -->
  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_products"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:paddingHorizontal="16dp" />

  <!-- 하단 버튼 (닫기 / 장바구니) -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/gray200"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_close"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@color/white"
      android:gravity="center"
      android:text="닫기"
      android:textColor="@color/black"
      android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_cart"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@color/blue2"
      android:gravity="center"
      android:text="장바구니"
      android:textColor="@color/white"
      android:textSize="16sp" />
  </LinearLayout>

</LinearLayout>
